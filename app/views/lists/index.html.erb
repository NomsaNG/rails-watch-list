<div class="banner-container">
  <div class="banner-nav-bar">
    <div><h1><i class="fas fa-play"></i><span class="logo-title">Watch List</span></h1></div>
  </div>

  <div class="banner-info">
    <div>
      <p class="banner-title">LATEST COLLECTION</p>
      <p class="banner-subtitle">Store your movies in the way you want!</p>
      <div class="btn-infos">
<!--         <p class="btn-add">Add to list</p> -->
        <%# <p class="btn-add"><%= link_to "Add movie", new_movie_path(@movie) %>
        <p class="btn-more-info"><%= link_to "Add list", new_list_path(@bookmark) %></p>
      </div>
    </div>
  </div>
</div>

<div class="movie-category">
  <p class="category-title">MY LISTS</p>
</div>

<div class="container">

<div class="lists">
  <% @lists.each do |list| %>
  <div class="left-border">

    <div>
      <div class="list-box text">
        <div class="row">
          <div class="col-lg-6">

          </div>
          <div class="col-lg-6">
            <h3 class="list-title"><%= list.name %> List</h3>
            <p class="click-text-content">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac interdum tellus. </p>
            <span class="click">
              <%= link_to "More info", list_path(list), class:"btn-click"%>
            </span>

          </div>
        </div>
      </div>

    </div>
  </div>
  <% end %>
</div>

</div>

